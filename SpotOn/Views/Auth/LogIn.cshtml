@model SpotOn.ApplicationLogic.ViewModels.Users.LogInViewModel

<div class="row" style="margin-top: 15%;">
    <div class="col-sm-3"></div>
    <div class="col-sm-6" style="border: 2px solid #dbdbdb; border-radius: 10px; padding-bottom: 25px; padding-top: 5px;">
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }
        <form asp-controller="Auth" asp-action="login" method="post" class="center_div">
            <div class="form-group">
                <label for="email"></label>
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter Email" required>
            </div>

            <div class="form-group">
                <label for="password"></label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-secondary">Sign In</button>
            <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-secondary">Sign Up</a>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>


