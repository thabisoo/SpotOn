@model SpotOn.ApplicationLogic.ViewModels.Users.RegisterUserViewModel

<div class="row" style="margin-top: 5%;">
    <div class="col-sm-3"></div>
    <div class="col-sm-6" style="border: 2px solid #dbdbdb; border-radius: 10px; padding-bottom: 25px; padding-top: 5px;">
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }
        <form asp-controller="Auth" asp-action="register" method="post">
            <div class="form-group">
                <label for="username"></label>
                <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Enter Username" required>
            </div>

            <div class="form-group">
                <label for="email"></label>
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter Email" required>
            </div>

            <div class="form-group">
                <label for="password"></label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" required>
            </div>

            <div class="form-group">
                <label for="repeatpassword"></label>
                <input asp-for="RepeatPassword" type="password" class="form-control" id="repeatpassword" placeholder="Repeat Password" required>
            </div>
            <button type="submit" class="btn btn-secondary">Register</button>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>

   

